// --------------> Using For Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n, sum=0;
    cin>>n;
    for(int i=1; i<=n/2; i++)
    {
        if(n%i==0)
        {
            cout<<i<<" ";
            sum+=i;    
        }
    }
    cout<<"\n";
    if(sum==n)
    cout<<n<<" is a Perfect Number";
    else cout<<n<<" is not a Perfect Number";
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n, i=1, sum=0;
    cin>>n;
    while(i<=n/2)
    {
        if(n%i==0)
        {
            cout<<i<<" ";
            sum+=i;    
        }
        i++;
    }
    cout<<"\n";
    if(sum==n)
    cout<<n<<" is a Perfect Number";
    else cout<<n<<" is not a Perfect Number";
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using Do While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n, i=1, sum=0;
    cin>>n;
    do
    {
        if(n%i==0)
        {
            cout<<i<<" ";
            sum+=i;    
        }
        i++;
    }while(i<=n/2);
    cout<<"\n";
    if(sum==n)
    cout<<n<<" is a Perfect Number";
    else cout<<n<<" is not a Perfect Number";
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
