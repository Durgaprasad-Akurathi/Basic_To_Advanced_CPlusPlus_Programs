// --------------> Using For Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Please enter the valid number: ";
    cin>>n;
    for(; n!=0; n/=10)
    {
        int rem=n%10;
        cout<<rem; 
    }
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Please enter the valid number: ";
    cin>>n;
    while(n>0)
    {
        int rem=n%10;
        n/=10;
        cout<<rem;
    }
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using Do While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Please enter the valid number: ";
    cin>>n;
    do
    {
        int rem=n%10;
        n/=10;
        cout<<rem;
    }while(n>0);
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
