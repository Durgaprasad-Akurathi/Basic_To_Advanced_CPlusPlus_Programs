// --------------> Using For Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,sum=0;
    cin>>n;
    for(int i=0; i<=n; i++)
    sum+=i;
    cout<<sum;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i=1, sum=0;
    cin>>n;
    while(i<=n)
    {
        sum+=i;
        i++;
    }
    cout<<sum<<endl;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using Do While Loop <-------------- //


#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i=1, sum=0;
    cin>>n;
    do
    {
        sum+=i;
        i++;
    }while(i<=n);
    cout<<sum<<endl;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
