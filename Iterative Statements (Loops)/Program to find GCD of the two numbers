// --------------> Using For Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n1, n2;
    cout<<"Please enter the two numbers: ";
    cin>>n1>>n2;
    for(; n1!=n2; )
    {
        if(n1>n2)
        n1-=n2;
        else n2-=n1;
    }
    cout<<"GCD of the given number is: "<<n1;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n1, n2;
    cout<<"Please enter the two numbers: ";
    cin>>n1>>n2;
    while(n1!=n2)
    {
        if(n1>n2)
        n1-=n2;
        else n2-=n1;
    }
    cout<<"GCD of the given number is: "<<n1;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using Do While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n1, n2;
    cout<<"Please enter the two numbers: ";
    cin>>n1>>n2;
    do
    {
        if(n1>n2)
        n1-=n2;
        else n2-=n1;
    }while(n1!=n2);
    cout<<"GCD of the given number is: "<<n1;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
