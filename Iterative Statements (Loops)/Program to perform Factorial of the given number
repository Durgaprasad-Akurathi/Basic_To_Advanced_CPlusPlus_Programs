// --------------> Using For Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,fact=1;
    cin>>n;
    for(int i=1; i<=n; i++)
    fact*=i;
    cout<<fact;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i=1,fact=1;
    cin>>n;
    while(i<=n)
    {
        fact*=i;
        i++;
    }
    cout<<fact;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// --------------> Using Do While Loop <-------------- //

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i=1,fact=1;
    cin>>n;
    do
    {
        fact*=i;
        i++;
    }while(i<=n);
    cout<<fact;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
