//////////////////////////////////////////////////////////////////////////////// USING FOR LOOP //////////////////////////////////////////////////////////////////////

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int a[]={10, 20, 30, 40, 500, 60, 70, 80, 90, 100}, key=40;
    for(int i=0; i<10; i++)
    {
        if(a[i]==key)
        {
        cout<<"Elemnent "<<key<<" found at location: "<<i;
        break;
        }
    }
}

//////////////////////////////////////////////////////////////////////////////// USING FOR EACH LOOP //////////////////////////////////////////////////////////////////////

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int a[]={10, 20, 30, 40, 500, 60, 70, 80, 90, 100, 101, 200, 300}, key=200, index=0;
    for(int i:a)
    {
        if(i==key)
        break;
        index++;
    }
    cout<<index;
}
