#include<bits/stdc++.h>
using namespace std;
int main() 
{
    int year;
    cout<<"Please enter a valid year: ";
    cin>>year;
    if(year%100==0)
        cout<<year<<" is a century year";
    else if(year%4==0 || year%400==0)
        cout<<year<<" is a leap year";
    else
        cout<<year<<" is a ordinary year";
}
