#include<bits/stdc++.h>
using namespace std;
int main()
{
    int amount, dis;
    cout<<"Enter the bill amount: ";
    cin>>amount;
    if(amount>=1000)
    {
        dis=(amount*40)/100;
        cout<<"Total Amount after 40% discount is "<<amount-dis;    
    }
    else if(amount>=800 && amount<999)
    {
        dis=(amount*30)/100;
        cout<<"Total Amount after 30% discount is "<<amount-dis;
    }
    else if(amount>=600 && amount<799)
    {
        dis=(amount*20)/100;
        cout<<"Total Amount after 20% discount is "<<amount-dis;
    }
    else if(amount>=400 && amount<599)
    {
        dis=(amount*10)/100;
        cout<<"Total Amount after 10% discount is "<<amount-dis;
    }
    else if(amount>=200 && amount<399)
    {
        dis=(amount*5)/100;
        cout<<"Total Amount after 5% discount is "<<amount-dis;
    }
    else cout<<"Total Amount: "<<amount;
}
