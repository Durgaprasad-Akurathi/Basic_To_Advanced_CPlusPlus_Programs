#include<bits/stdc++.h>
using namespace std;
int main() 
{
	char grade;
	double gpa=0.0;
	cout<<"Enter your Grade:  ";
	cin>>grade;
	switch(grade) 
	{
		case'A': case'a': gpa=10.0; cout<<"your GPA is "<<gpa; break;
		case'B': case'b': gpa=9.0; cout<<"your GPA is "<<gpa; break;
		case'C': case'c': gpa=8.0; cout<<"your GPA is "<<gpa; break;
		case'D': case'd': gpa=7.0; cout<<"your GPA is "<<gpa; break;
		case'F': case'f': gpa=6.0; cout<<"your GPA is "<<gpa; break;
		default: cout<<"invalid grade entered"; break;
	}
}
